<Window x:Class="ProyectoMinaELMochito.Usuarios_Crud"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoMinaELMochito" xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Usuarios_Crud" Height="450" Width="800"
         AllowsTransparency="True" Background="Transparent" 
        WindowStyle="None" ResizeMode="NoResize"
         WindowStartupLocation="CenterScreen">
    <Grid Background="#f2006d77">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>

        </Grid.RowDefinitions>
        <Label Name="lbtitulo" Content="Usuarios" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" FontFamily="Helvetica" FontSize="25"/>
        <iconPacks:PackIconMaterial Kind="RobotConfused" 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Left" 
                                                Foreground="Black"
                                                Name="icon"
                                                Width="24" Visibility="Visible" Grid.Column="2" Grid.Row="0" Margin="58,10,0,15"   />
        <Label Name="lbnombre" Content="Nombre Completo" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center"/>
        <TextBox Name="txtnombre" Grid.Row="2" Grid.Column="1"/>
        <Label Name="lbUsername" Content="Nombre de usuario" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center"/>
        <TextBox Name="txtusername" Grid.Row="3" Grid.Column="1"/>
        <Label Name="lbPassword" Content="Contraseña" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center"/>
        <PasswordBox Name="pssPassword" Grid.Row="4" Grid.Column="1"/>
        <Label Name="lbRol" Content="Rol" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center" />
        <ComboBox Name="cmbRol" Grid.Column="1" Grid.Row="5" >
            <ComboBoxItem>ADMINISTRADOR</ComboBoxItem>
            <ComboBoxItem>EMPLEADODETURNO</ComboBoxItem>
        </ComboBox>
        <Label Name="lbestado" Content="Estado" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Center"/>
        <ComboBox Name="cmbEstado" Grid.Column="1" Grid.Row="6" >
            <ComboBoxItem>Inactivo</ComboBoxItem>
            <ComboBoxItem>Activo</ComboBoxItem>
        </ComboBox>

        <DataGrid Name="dtgriduser" Grid.Row="2" Grid.Column="2" Grid.RowSpan="5" Grid.ColumnSpan="2" Margin="0,0,23,0" HorizontalAlignment="Right" Width="353">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="#00afb9"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="BorderThickness" Value="0,0,1,2"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="Background" Value="WhiteSmoke"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>

        <Button Name="btnIngresar" Click="btnIngresar_Click" Content="Insertar" Grid.Column="0" Grid.Row="8" Width="150" Height="40">
            
        </Button>
        <iconPacks:PackIconMaterial Kind="StarPlus" 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Left" 
                                                Foreground="White"
                                                Name="icon1"
                                                Width="24" Visibility="Visible" Grid.Column="0" Grid.Row="8" Margin="130,10,0,15" RenderTransformOrigin="2.949,0.131"   />

        <Button Name="btnModificar" Content="Modificar" Grid.Column="1" Grid.Row="8" Width="150" Height="40">

        </Button>
        <iconPacks:PackIconMaterial Kind="StarCog"
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Left" 
                                                Foreground="White"
                                                Name="icon2"
                                                Width="24" Visibility="Visible" Grid.Column="1" Grid.Row="8" Margin="130,10,0,15" RenderTransformOrigin="2.949,0.131"   />

        <Button Name="btnEliminar" Content="Eliminar" Grid.Column="2" Grid.Row="8" Width="150" Height="40">

        </Button>
        <iconPacks:PackIconMaterial Kind="StarMinus" 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Left" 
                                                Foreground="White"
                                                Name="icon3"
                                                Width="24" Visibility="Visible" Grid.Column="2" Grid.Row="8" Margin="130,10,0,15" RenderTransformOrigin="2.949,0.131"   />


        <Button Name="btnsalir" Content="Salir" Grid.Column="3" Grid.Row="8" Width="150" Height="40">

        </Button>
        <iconPacks:PackIconMaterial Kind="ExitToApp" 
                                                VerticalAlignment="Center" 
                                                HorizontalAlignment="Left" 
                                                Foreground="White"
                                                Name="icon4"
                                                Width="24" Visibility="Visible" Grid.Column="3" Grid.Row="8" Margin="130,10,0,15" RenderTransformOrigin="2.949,0.131"   />


    </Grid>
</Window>
